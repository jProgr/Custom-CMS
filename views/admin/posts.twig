{% extends "layout.twig" %}

{% block content %}
    <h2>Posts</h2>
    <a class="btn btn-primary" href="{{ 'admin/posts/create' | url }}">New post</a>
    <table class="table">
        <tr>
            <th>Title</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>

        <!-- Prints list of blogposts from DB -->
        {% for blogPost in blogPosts %}
            <tr>
                <td>{{ blogPost.title }}</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}